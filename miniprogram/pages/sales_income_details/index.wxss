.title{
  font-size: 20px;
  font-weight: 600;
  width: 80%;
  height: 40px;
  text-align: center;
  margin-bottom: 30px;
}

.income-container{
  width: 100%;
  display: flex;
  flex-direction: row;
}

.income{
  text-align: center;
  width: 33%;
}

.text{ 
  margin-bottom: 10px;
  font-size: 12px;
  color: #808080;
}

.number{
  font-size: 16px;
  font-weight: 600;
}

.income-blue{
  margin-top: 50px;
  border-radius: 10px;
  width: 80%;
  background-color: #5773ee;
  height: 150px;
}

.wallet{
  margin-left: 20px;
  margin-top: 20px;
  color: aliceblue;
}

.money-box{
  flex-direction: row;
  display: flex;
  margin-top: 20px;
  margin-left: 20px;
  width: 100%;
}

.money{
  color: aliceblue;
  font-size: 25px;
  font-weight: 600;
}

.yuan {
  margin-top: 10px;
  margin-left: 10px;
  font-size: 12px;
  color: antiquewhite;
}

.getmoney{

}

.basic-settings-container{
  margin-top: 40px;
  width: 100%;
}

.icon{
  width: 20px;
  height: 20px;
  margin-left: 40px;
  margin-top: 2px;
}

.arrow{
  position: absolute;
  right: 60px;
  width: 20px;
  height: 20px;
}

.setting-text{
  width: 70%;
  height: auto;
  margin-left: 10px;
}

.setting-text-detail{
  font-size: 12px;
  color: #606060;
  margin-top: 3px;
}

.settings{
  display: flex;
  flex-direction: row;
  width: 80%;
  height: 50px;
}